<%= form_for(@attendee) do |f| %>
  <% if @attendee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attendee.errors.count, "error") %> prohibited this attendee from being saved:</h2>

      <ul>
      <% @attendee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row form-row">
    <div class="col-md-10">
      <%= f.number_field :seats, :class => "form-control", :placeholder => "Seats" %>
    </div>
  </div>

  <div class="row form-row">
    <div class="col-md-10">
      <div class="input-group">
        <input type="text" class="form-control">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button"><i class="fa fa-th"></i></button>
      </span>
      </div><!-- /input-group -->
    </div>
  </div>
  <br/>

  <div class="row form-row">
    <div class="col-md-10">
      <%= f.text_field :phone_number, :class => "form-control", :placeholder => "Phone number" %>
    </div>
  </div>

  <div class="row form-row">
    <div class="col-md-10">
      <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
    </div>
  </div>

  <div class="row form-row">
    <div class="col-md-10">
      <div class="checkbox check-default">
        <input value="1" id="checkbox1" type="checkbox">
        <label for="checkbox1">I have read and agree to the Terms and Conditions</label>
      </div>
    </div>
  </div>


  <div class="field">
    <%= f.hidden_field :experience_id, :value => experience_id %>
  </div>

  <div class="row form-row">
    <div class="col-md-10">
      <%= f.submit "Pay Now", :class => "btn btn-primary btn-cons" %>

      <span style="font-size: 13px; font-weight: bold; margin-right: 5px;">OR</span>

      <!--SEND A MESSAGE START-->
      <button class="btn btn-cons" data-toggle="modal" data-target="#messageHost"> Ask a questions </button>
      <!-- Modal -->
      <div class="modal fade" id="messageHost" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <form action="" id="new_conversation">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <br>
                <h4 id="myModalLabel" class="semi-bold">Have a question?</h4>
                <p class="no-margin">Send the host a message and they will get back to you shortly. </p>
                <br>

                <div class="alert alert-success" id="review_created_success">
                  <button data-dismiss="alert" class="close"></button>
                  Success: Your message was submitted successfully.
                </div>

              </div>
              <div class="modal-body">
                <div class="row form-row">
                  <div class="col-md-6">
                    <input type="text" id="message_name" class="form-control" name="message[name]" placeholder="Your Name">
                  </div>
                  <div class="col-md-6">
                    <input type="text" id="message_email" class="form-control" name="message[from]" placeholder="Your Email Id">
                  </div>
                </div>
                <div class="row form-row">
                  <div class="col-md-12">
                    <!--<input type="text" class="form-control" placeholder="Card Holder's Name">-->
                    <textarea id="message_body" class="form-control" rows="5" name="message[body]" placeholder="Your Message"></textarea>
                  </div>
                </div>
              </div>

              <input type="hidden" name="message[experience_id]" id="message_experience_id" value="<%= experience.id %>"/>

              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="send_conversation">Send Message</button>
              </div>
            </form>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
      <!-- /.modal -->
      <!--SEND A MESSAGE END-->

    </div>
  </div>

<% end %>
