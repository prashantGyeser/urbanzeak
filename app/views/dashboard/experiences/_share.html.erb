<!-- Modal -->
<div class="modal fade" id="share" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <br>
        <h4 id="myModalLabel" class="semi-bold">Share on social media</h4>
        <p class="no-margin">Click on the share button below to push your experience details to your wall. </p>
        <br>

      </div>
      <div class="modal-body share_body" style="background: white">
        <div class="alert alert-error">
          <button data-dismiss="alert" class="close"></button>
          Error: Something went wrong. Did you authenticate your account with Facebook. If not do it now by going to <%= link_to "Integration", dashboard_integrations_path, :class => "link" %>
        </div>
        <div class="alert alert-success">
          <button data-dismiss="alert" class="close"></button>
          Success: Your message was posted to Facebook.
        </div>


        <% if @integration_tokens.blank? %>
          <div class="alert">
            <button data-dismiss="alert" class="close"></button>
            To share on Facebook, go to the integrations page or click the button below
            <br/>
            <a href="<%= dashboard_integrations_path %>" class="btn btn-primary m-t-10">Integrate now</a>
          </div>
        <% else %>
          <div class="row">
            <div class="col-md-12">
              <div class="alert alert-info">
                <button data-dismiss="alert" class="close"></button>
                Info: The following message will be shared with your network when you share.
                <div class="bold" id="share-message">

                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div style="background: #E5E9EC;text-align: center;padding:20px 10px 10px 10px;">
                <i class="fa fa-facebook-square" style="font-size: 3em; display: inline"></i>
                <button class="btn btn-primary btn-cons facebook-share" type="button">Share</button>
              </div>
            </div>
          </div>
        <% end %>


      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->