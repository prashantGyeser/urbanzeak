<div class="content-header">
  <h1 class="title">
    <a id="menu-toggle" href="#" class="btn btn-default"><i class="fa fa-bars"></i></a>
    Your Experiences
  </h1>
  <row>
    </div>
  </row>
</div>

<!-- Keep all page content within the page-content inset div! -->
<div class="page-content inset" ng-app="chatApp">
    <div class="experienceButtonContainer">
        <%= link_to dashboard_experiences_new_path, :class=> "button" do %>
            <i class="fa fa-plus"></i>
            Create Experience
        <% end %>
    </div>
    
  <div class="row">
    <div class="col-md-12">
      <ul class="experienceList">
          <% @experiences.each do |experience| %>
            <li class="clearfix">
            
                <div class="experienceDetails">
                    <div class="heading">
                        <strong><%= link_to experience.name, experience_path(experience)%></strong>
                    </div>
                    <div class="subDetails">
                        <ul>
                            <li>Attendees: <strong>5</strong></li>
                            <li>Revenue: <strong><span class="currency">Rs </span> 5000</strong></li>
                        </ul>
                        <div class="shareUrl">
                            <strong>URL to share:</strong>
                            <span><%= link_to experience.shortened_url, experience.shortened_url %></span>
                        </div>
                    </div>
                </div>
            
            <div class="experienceCommands pull-right">
              <a href="#" class="button">Replicate</a>    
            </div>
            </li>
          <% end %>

      </ul>
    </div>
  </div>
</div>