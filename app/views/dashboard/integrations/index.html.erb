<!-- BEGIN PAGE TITLE -->
<div class="page-title">
  <h3>Integrations</h3>
  <p style="font-size: 13px">
    We integrate with amazing sales tools that help you to market and sell your experiences and activities. Go ahead and use these tools to sell more.
  </p>
</div>
<!-- END PAGE TITLE -->

<!-- BEGIN PlACE PAGE CONTENT HERE -->
<div class="row">
  <div class="col-md-12">
    <div class="grid simple">
      <!--CONTENT START-->
      <div class="grid-body no-border">
        <!--INTEGRATION LIST START-->
        <table class="table no-more-tables m-t-40">
          <!--HEADING START-->
          <thead>
          <tr>
            <th style="width:9%">Provider</th>
            <th style="width:22%">Description</th>
            <th style="width:6%">Status</th>
            <th style="width:10%">Actions</th>
          </tr>
          </thead>
          <!--HEADING END-->
          <!--TABLE BODY START-->
          <tbody>
            <!--ROW 1 START-->
            <tr>
              <td class="v-align-middle">Facebook</td>
              <td class="v-align-middle"><span class="muted">Post your experience to Facebook when created</span>
              </td>
              <td>

                <% if @facebookIntegrationDone == true %>
                  <span class="label label-success">CONNECTED</span>
                <% else %>
                  <span class="muted">
                    <span class="label">NOT CONNECTED
                    </span>
                  </span>
                <% end %>


              </td>

              <td class="v-align-middle">

                <% if @facebookIntegrationDone == true %>

                <% else %>
                  <%= link_to "Connect", dashboard_integrations_facebook_path, :class => "btn btn-primary btn-sm btn-small" %>
                <% end %>



              </td>
            </tr>
            <!--ROW 1 END-->
          </tbody>
          <!--TABLE BODY END-->
        </table>
        <!--INTEGRATION LIST END-->
      </div>
      <!--CONTENT END-->
    </div>
  </div>
</div>
<!-- END PLACE PAGE CONTENT HERE -->
