<!DOCTYPE html>
<head>
  <script>
    document.documentElement.className = document.documentElement.className.replace(/\bno-js\b/,'js');
  </script>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <meta charset="utf-8" />
  <title>Experience website sample</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <meta content="" name="description" />
  <meta content="" name="author" />
  <!--TYPEKIT FONTS -- START-->
  <script type="text/javascript" src="//use.typekit.net/yjy6rjo.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <!--TYPEKIT FONTS -- END-->
  <!-- BEGIN CSS TEMPLATE -->
  <%= stylesheet_link_tag    "plugins/bootstrap-datepicker/css/datepicker.css" %>
  <%= stylesheet_link_tag    "expShow/application" %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <!-- END CSS TEMPLATE -->

  <!--CUSTOM CSS START-->
  <style>
    html {
      position: relative;
      min-height: 100%;
    }
    body {
      /* Margin bottom by footer height */
      margin-bottom: 60px;
    }
    #footer {
      position: absolute;
      bottom: 0;
      width: 100%;
      /* Set the fixed height of the footer here */
      height: 60px;
      background-color: red;
    }
  </style>
  <!--CUSTOM CSS END-->

  <!--JAVASCRIPT INCLUDES START-->
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
  <%= javascript_include_tag "expShow/application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "plugins/bootstrap-datepicker/js/bootstrap-datepicker.js", 'data-turbolinks-track' => true %>
  <!--JAVASCRIPT INCLUDES END-->
  <script type="text/javascript">var switchTo5x=true;</script>
  <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
  <script type="text/javascript">stLight.options({publisher: "ur-bdccc91-2edd-103e-668f-89b5c48e233", doNotHash: false, doNotCopy: false, hashAddressBar: false});</script>
  <%= csrf_meta_tag %>
</head>
<!-- END HEAD -->
<body>

<div class="main-wrapper">



  <!--NAV AFTER WAYPOINT START-->
  <%= render "navigation" %>
  <!--NAV AFTER WAYPOINT END-->

  <!--HEADER START-->
  <%= render partial: 'header' %>
  <!--HEADER END-->

  <!--TAGLINE START-->
  <%# render partial: 'tagline', :locals => {:experience => @experience} %>
  <!--TAGLINE END-->


  <!--ABOUT EXPERIENCE AND JOIN NOW START-->
  <%= render partial: 'about_experience' %>
  <!--ABOUT EXPERIENCE AND JOIN NOW END-->

  <!--VENUE MAP START-->
  <%= render partial: 'venue_map'%>
  <!--VENUE MAP END-->

  <!--ABOUT HOST START-->
  <!--Todo: Add a static about host section-->
  <%# render :partial => "about_host" %>

  <!--ABOUT HOST END-->

  <!--SOCIAL SHARE START-->
  <div class="section white">
    <div class="container">
      <div class="p-t-60 p-b-50 ">
        <div class="row feature-list">
          <div class="col-md-6 col-md-offset-3">
            <h2 class="center-text">Spread <span class="semi-bold">the word</span></h2>
            <!--SOCIAL MEDIA SHARE BUTTONS START-->
            <span class='st_facebook_hcount' displayText='Facebook' style="padding-bottom: 5px;"></span>
            <span class='st_twitter_hcount' displayText='Tweet'></span>
            <span class='st_linkedin_hcount' displayText='LinkedIn'></span>
            <span class='st_googleplus_hcount' displayText='Google +'></span>
            <span class='st_pinterest_hcount' displayText='Pinterest'></span>
            <!--SOCIAL MEDIA SHARE BUTTONS END-->

            <br/>
            <br/>

          </div>
        </div>
      </div>
    </div>
  </div>
  <!--SOCIAL SHARE END-->

  <% if @reviews.blank? %>

  <% else %>
    <!--REVIEWS START-->
    <%= render :partial => "reviews" %>
    <!--REVIEWS END-->
  <% end %>


  <!--THINGS TO REMEMBER START-->
  <%= render :partial => "things_to_remember" %>
  <!--THINGS TO REMEMBER END-->

  <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
    <div class="container p-t-20">
      <h2><a href="<%= new_dashboard_experience_path %>">Create your own experience page like this one</a></h2>
    </div>
  </nav>

</div>

<script>
  $(window).bind('load', function () {

    resizeElements();

    function resizeElements() {

      headerHeight = $('.navbar').height();
      footerHeight = $('footer').height();

      if (($(document.body).height() + footerHeight) < $(window).height()) {
        $footer.addClass('navbar-fixed-bottom');
      } else {
        $footer.removeClass('navbar-fixed-bottom');
      }
    }

    $(window).resize(resizeElements);

  });
</script>

<script>
  var latitude = 40.893275;
  var longitude =  -73.826941;

  //console.log(longitude);

  //Initialize Map
  map = new GMaps({
    el: '#map',
    lat: latitude,
    lng: longitude,
    zoomControl : false,
    zoomControlOpt: {
      style : 'SMALL',
      position: 'TOP_LEFT'
    },
    markers: [
      {lat: -12.043333, lng: -77.028333},
      {lat: -12.045333, lng: -77.034},
      {lat: -12.045633, lng: -77.022}
    ],
    panControl : false,
    streetViewControl : false,
    mapTypeControl: false,
    overviewMapControl: false,
    draggable: false

  });
  // Add a random mark
  setTimeout( function(){
    map.addMarker({
      lat: latitude,
      lng: longitude,
      animation: google.maps.Animation.DROP,
      draggable: false
    });
  },3000);
  $("#map-zoom-out").click(function() {
    map.zoomOut(1);
  });

  $("#map-zoom-in").click(function() {
    map.zoomIn(1);
  });
</script>

</body>
</html>