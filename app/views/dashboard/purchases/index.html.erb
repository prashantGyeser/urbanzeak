<!--PAGE TITLE START-->
<div class="page-title">
  <h3>Purchases - <span class="semi-bold">By Experience</span></h3>
</div>
<!--PAGE TITLE START-->
<!--ROW START-->
<div class="row">
  <!--12 COL START-->
  <div class="col-md-12">
    <!--PURCHASES GRID START-->
    <div class="grid simple ">
      <!--GRID TITLE START-->
      <div class="grid-title">
        <h4>Customer <span class="semi-bold">Purchase Details</span></h4>
      </div>
      <!--GRID TITLE END-->
      <!--GRID BODY START-->
      <div class="grid-body ">
        <!--TABLE START-->
        <table class="table table-hover table-condensed" id="example">
          <thead>
          <tr>

            <!--<th style="width:1%"><div class="checkbox check-default" style="margin-right:auto;margin-left:auto;">-->
              <!--<input type="checkbox" value="1" id="checkbox1">-->
              <!--<label for="checkbox1"></label>-->
            <!--</div></th>-->
            <th style="width:10%">Customer Email</th>
            <th style="width:22%" data-hide="phone,tablet">Tickets Purchases For</th>
            <th style="width: 6%">Attending On</th>
            <th style="width:6%">Tickets</th>
            <th style="width:10%" data-hide="phone,tablet">Total Paid</th>
          </tr>
          </thead>
          <tbody>
          <% @experiences.each do |experience| %>
            <% experience.attendees.each do |attendee| %>
              <tr>
                <td><%= attendee.email %></td>
                <td><span class="muted"><%= experience.name %></span></td>
                <td><%= attendee.attending_date %></td>
                <td><%= attendee.seats %></td>
                <td>$<%= attendee.seats * experience.price %></td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
        <!--TABLE END-->
      </div>
      <!--GRID BODY END-->
    </div>
    <!--PURCHASES GRID END-->
  </div>
  <!--12 COL END-->
</div>
<!--ROW END-->