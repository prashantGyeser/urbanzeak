<!--PAGE TITLE START-->
<div class="page-title">
  <h3>Reviews - <span class="semi-bold">By Experience</span></h3>
</div>
<!--PAGE TITLE START-->

<!--PAGE BODY -- START - EACH EXPERIENCE-->
<% @experiences.each do |experience| %>
  <div class="row">
    <div class="col-md-12">
      <div class="grid simple ">
        <div class="grid-title no-border">
          <h4><%= experience.name %></h4>
        </div>
        <div class="grid-body no-border">

          <% if experience.reviews.blank? %>
            <div class="row">
              <div class="col-md-6 col-md-offset-3">
                <div class="get-started-title p-b-40 text-center">
                  <div class="step-icon"><i class="fa fa-book" style="font-size: 6em"></i></div>
                  <h4>No reviews yet for this experience! As soon as someone reviews this experience it will show up here.</h4>
                </div>


                <%# link_to "New Experience", dashboard_experiences_new_path, :class => "btn btn-primary btn-cons"  %>
              </div>
            </div>
          <% else %>
            <table class="table no-more-tables">
              <thead>
              <tr>
                <th style="width:1%">
                  <div class="checkbox check-default">
                    <input id="checkbox10" type="checkbox" value="1" class="checkall">
                    <label for="checkbox10"></label>
                  </div>
                </th>
                <th style="width:9%">Review By</th>
                <th style="width:38%">Comment</th>
              </tr>
              </thead>
              <tbody>
              <% experience.reviews.each do |review| %>
                <tr>
                  <td class="v-align-middle">
                    <div class="checkbox check-default">
                      <input id="<%= experience.id %>_<%= review.id %>" type="checkbox" value="1">
                      <label for="checkbox11"></label>
                    </div>
                  </td>
                  <td class="v-align-middle"><%= review.name %></td>
                  <td class="v-align-middle"><%= review.comment %></td>
                </tr>
              <% end %>

              </tbody>
            </table>

          <% end %>


        </div>
      </div>
    </div>
  </div>
<% end %>
<!--PAGE BODY -- END-->

