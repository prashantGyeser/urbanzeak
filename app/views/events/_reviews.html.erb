<div class="section white">
  <div class="container">
    <div class="p-t-60 p-b-50">

      <div class="col-md-6  col-md-offset-3">
        <h2 class="text-center">What our customers are <span class="semi-bold">saying</span></h2>
      </div>

      <div id="testomonials" class="owl-carousel row">
        <% @reviews.each do |review| %>
          <div class="item">
            <div class="col-md-6   col-md-offset-3">
              <h4 class="normal text-center">
                <%= review.comment %>
              </h4>
              <p class="text-center"><%= review.name %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>