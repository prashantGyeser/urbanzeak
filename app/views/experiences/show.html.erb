<div class="experienceShow">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="experienceShowContainer">

          <div id="experienceShowImg">
            <%= image_tag @experience.image_url(:show).to_s, :id => "expShowImg", :style => "width: 100%"  %>
          </div>


          <h2><%= @experience.name%></h2>
          <div class="subDetails">
            <ul>
              <li>On:
                <strong>
                  <%= @experience.exp_date.strftime('%A %d-%B-%Y ') %> at <%= @experience.exp_time.strftime('%I:%M %p') %>
                </strong>
                In:
                <strong><%= @experience.city %></strong>
              </li>

            </ul>
          </div>
          <div>
            <a href="#messageHost" class="button fancybox">Ask a question</a>
          </div>
          <div>
            <p>
              <%= simple_format(@experience.description).html_safe %>

            </p>
          </div>
        </div>

      </div>

      <div class="col-lg-4">
        <div class="experienceSubDetails">
          <h4><%= @experience.name %></h4>
          <strong>Rs <%= @experience.price %></strong>
          <br/>
          <strong>RSVP Now</strong>
          <%= render partial: 'attendees/form', :locals => {:experience_id => @experience.id} %>
        </div>

        <div class="experienceSubDetails">
          <strong>Experiences are better with friends</strong>
