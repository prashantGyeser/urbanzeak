<body>
<div class="main-wrapper">

<!--HEADER START-->
  <%= render partial: 'header', :locals => {:experience => @experience, :header_images => @header_images} %>
<!--HEADER END-->

<!--ABOUT EXPERIENCE AND JOIN NOW START-->
<%= render partial: 'about_experience', :locals => {:experience => @experience} %>
<!--ABOUT EXPERIENCE AND JOIN NOW END-->



<!--GALLERY START-->
<div class="container">
  <!--MARGIN TOP AND BOTTOM START-->
  <div class="p-t-60 p-b-80">
    <h2>Experience <span class="semi-bold">Pictures</span></h2>
    <div class="portfolio-grid portfolioContainer ">
      <ul id="thumbs" class="col3 isotope" style="position: relative; overflow: hidden; height: 1406px;">

        <% @images.each do |image| %>
          <li class="item web isotope-item" style="position: absolute; left: 0px; top: 0px; -webkit-transform: translate3d(0px, 0px, 0px);">
            <div class="portfolio-image-wrapper" style="height: 271px;">
              <%= image_tag image.image_url.to_s %>
            </div>
            <div class="clearfix"></div>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
  <!--MARGIN TOP AND BOTTOM END-->
</div>
<br>
<br>
<!--GALLERY END-->

<!--ABOUT HOST START-->
<% if @host.nil? %>

<% else %>
    <%= render :partial => "about_host", :locals =>{:host => @host, :experience_id => @experience.id } %>
<% end %>
<!--ABOUT HOST END-->

<div class="section grey">
  <div class="container">
    <div class="p-t-60 p-b-60">
      <div class="row">
        <div class="col-md-6">
          <h3>What you <span class="semi-bold">get</span></h3>
          <p class="p-r-50">
            <%= @experience.what_does_this_include %>
          </p>
        </div>
        <div class="col-md-6">
          <h3>Things to <span class="semi-bold">remember</span></h3>
          <p class="p-r-50">
            <%= @experience.things_to_remember %>
          </p>
        </div>
      </div>
      <br>
      <div class="clearfix"></div>

    </div>

  </div>
</div>
<div class="section white">
  <div class="container">
    <div class="p-t-60 p-b-50 ">
      <div class="row feature-list">
        <div class="col-md-6 col-md-offset-3">
          <!--SOCIAL MEDIA SHARE BUTTONS START-->
          <span class='st_facebook_hcount' displayText='Facebook' style="padding-bottom: 5px;"></span>
          <span class='st_twitter_hcount' displayText='Tweet'></span>
          <span class='st_linkedin_hcount' displayText='LinkedIn'></span>
          <span class='st_googleplus_hcount' displayText='Google +'></span>
          <span class='st_pinterest_hcount' displayText='Pinterest'></span>
          <!--SOCIAL MEDIA SHARE BUTTONS END-->

          <br/>
          <br/>

        </div>
      </div>
    </div>
  </div>
</div>


