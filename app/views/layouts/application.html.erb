<!DOCTYPE html>
<html>
<head>
  <title>Urbanzeak</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <!-- Font awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.min.css" media="all" rel="stylesheet" type="text/css">
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&amp;language=en"></script>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if flash[:error] -%>
        <div class="alert alert-danger"><%=h flash[:error] %></div>
      <% end -%>
      <% if flash[:notice] -%>
        <div class="alert alert-success"><%=h flash[:notice] %></div>
      <% end -%>
    </div>
  </div>
</div>

<div class="topBar">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <%= image_tag 'logo.png' %>
      </div>

      <div class="col-lg-6">
        <div class="login">
          <div class="userInfo pull-right">

            <% if user_signed_in? %>
              <% if current_user.host?%>

              <% else %>
                <%= link_to('Host your experience', pages_sell_url, :class => "button is-secondary") %>
              <% end %>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => "button") %>
            <% else %>
              <%= link_to('Login', new_user_session_path, :class => "button is-primary")  %>
              <%= link_to('Register', new_user_registration_path, :class => "button is-secondary")  %>
            <% end %>

          </div>


        </div>
      </div>
    </div>
  </div>
</div>

<%= yield %>

</body>
</html>
