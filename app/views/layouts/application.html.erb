<!DOCTYPE html>
<html>
<head>
  <title>Urbanzeak</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>

  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&amp;language=en"></script>

  <!--
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700,300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Raleway:700,900,500' rel='stylesheet' type='text/css'>
  -->

  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Firebase -->
  <script type='text/javascript' src='https://cdn.firebase.com/v0/firebase.js'></script>

  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if flash[:error] -%>
        <div class="alert alert-danger"><%=h flash[:error] %></div>
      <% end -%>
      <% if flash[:notice] -%>
        <div class="alert alert-success"><%=h flash[:notice] %></div>
      <% end -%>
    </div>
  </div>
</div>

<div class="topBar">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <%= image_tag 'logo.png' %>
      </div>

      <div class="col-lg-6">
        <div class="login">
          <div class="userInfo pull-right">

            <% if user_signed_in? %>
              <% if current_user.host?%>
                <%= link_to('View your dashboard', hosts_dashboard_path, :class => "button is-secondary", :id => "viewHostDashboard") %>
              <% else %>
                <%= link_to('Host your experience', pages_sell_url, :class => "button is-secondary", :id => "topbarHostYourExperience") %>
              <% end %>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => "button") %>
            <% else %>
              <%= link_to('Login', new_user_session_path, :class => "button is-primary", :id => "topbarLogin")  %>
              <%= link_to('Register', new_user_registration_path, :class => "button is-secondary", :id => "topbarRegister")  %>
            <% end %>

          </div>


        </div>
      </div>
    </div>
  </div>
</div>

<%= yield %>


<script>
  $(document).ready(function(){
    $('#viewHostDashboard').click(function(){
      <% if current_user.nil? %>

      <% else %>
        mixpanel.track(
          'Clicked view host dashboard topbar',
          {
            'User id': '<%= current_user.id %>'
            'First name': '<%= current_user.first_name%>',
            'Last name': '<%= current_user.last_name%>',
          }
        );
      <% end %>

    });

    $('#topbarHostYourExperience').click(function(){
      <% if current_user.nil? %>

      <% else %>
        mixpanel.track(
          'Clicked host your experience topbar',
          {
            'User id': '<%= current_user.id %>'
            'First name': '<%= current_user.first_name%>',
            'Last name': '<%= current_user.last_name%>',
          }
        );
      <% end %>

    });

    $('#topbarLogin').click(function(){
        mixpanel.track(
          'Clicked login topbar',
          {
            
          }
        );
    });

    $('#topbarRegister').click(function(){
        mixpanel.track(
          'Clicked register topbar',
          {

          }
        );
    });


  });
</script>

</body>
</html>
